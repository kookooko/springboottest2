<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lu.test1.mapper.UserMapper">
    <select id="findUserById3" resultType="com.lu.test1.model.User" parameterType="int">
        select * from user where id = #{id}
    </select>
    <insert id="addUser" parameterType="com.lu.test1.model.User">
        insert into user (username,password,email,birthday) values(#{username},#{password},#{email},#{birthday})
    </insert>
</mapper>
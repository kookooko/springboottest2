<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lu.test2.mapper.CustomerMapper">
    <select id="findCustomer" resultType="com.lu.test2.model.Customer" parameterType="int">
        select * from customer where id = #{id}
    </select>
    <insert id="addCustomer" parameterType="com.lu.test2.model.Customer">
        insert into customer (name,tel) values(#{name},#{tel})
    </insert>
</mapper>